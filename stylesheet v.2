	/********************
	GENERAL
	*********************/

	body{
		font-family: 'Poppins', sans-serif;
		font-size: 13px;
	}

	#interests {
		max-width: 100%;
		margin: 0 auto;
	}

	a {
		text-decoration: none;
		color: #000;
	}

	img {
		max-width: 100%;
	}

	.subtitle {
		font-family: 'arimo', serif;
		font-size: 1.5em;
		margin: -5px 0 0;
		font-weight: normal;
	}

	/*********************
	HEADER 
	**********************/

	header {
		float: left
		margin: 0 0 30px 0;
		padding: 5px 0 0 0;
		width: 100%;
	}

	#logo {
		text-align: center;
		margin: 0 auto;
	}

	h1 {
		font-family: 'arimo', serif;
		margin: 15px 0px;
		font-size: 2.75em;
		font-weight: normal;
		line-height: 0.8em;
	}

	h2 {
		font-family: 'arimo', serif;
		font-size: 1.5em;
		margin: -5px 0 0;
		font-weight: normal;
	}

	

	/*********************
	NAVIGATION
	**********************/

	nav {
		text-align: center;
		padding: 1px 0;
		margin: 2px 0 0;
	}

	nav ul {
		list-style: none;
		margin: 0 1em;
		padding: 0;
	}

	nav li {
		display: inline-block;
	}

	nav a {
		font-weight: 800
		padding: 1.5em 1em;
	}



	/*********************
	ABOUT ME (Index) PAGE
	**********************/




	/*********************
	RESUME PAGE
	**********************/

	h3 {
		font-family: 'Ubuntu', serif;
		font-size: 1.5em;
		font-weight: bold;
		line-height: .75em;
		padding-left: 2em;
		padding-right: 2em;
		}

	h4 {
		font-family: 'Ubuntu', serif;
		font-size: 1.25em;
		font-weight: normal;
		line-height: .75em;
		padding-left: 2em;
		padding-right: 2em;
		}

	h5 {
		font-family: 'Ubuntu', serif;
		font-size: 1em;
		font-weight: normal;
		line-height: .75em;
		padding-left: 2em;
		padding-right: 2em;
		}

	li {
		font-family: 'Ubuntu', serif;
		font-size: 1em;
		font-weight: normal;
		line-height: 1em;
		padding-left: 2em;
		padding-right: 2em;
		}


	/*********************
	PORTFOLIO PAGE
	**********************/

	#gallery {
		margin: 0;
		padding: 0;
		list-style: none;
	}

	#gallery li {
		float: left;
		width: 45%;
		margin: 2.5%;
		background-color: #66CDAA;
	}

	#gallery li a p {
		margin: 0;
		padding: 5%;
		font-size: 0.75em;
		}


	/*********************
	FOOTER
	**********************/


	footer {
		font-size: 0.75em;
		text-align: left;
		clear: both;
		padding-top: 50px;
		color: #010999;
	}


	/********************
	COLORS
	*********************/

	body {
		background-color: #fff;
		color: #010999;
	}

	header {
		background: #85C1E9;
		border-color: #000;
	}

	h1, h2 {
		color: #000;
		}

	nav a, nav a:visited {
		color: #000;
	}

	nav a, nav a:hover {
		color: red;
	}















